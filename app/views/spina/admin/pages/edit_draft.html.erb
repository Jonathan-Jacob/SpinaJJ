<%= render(Spina::UserInterface::ModalComponent.new) do |component| %>
  <%= form_with model: @page, url: spina.admin_page_path(@page), data: {turbo_frame: "_top", controller: "toggle-page-drafts"} do |f| %>
    <div class="px-4 pt-5 sm:p-6 sm:pb-4">
      <div class="sm:flex sm:items-start">
        <div class="mt-3 text-center sm:mt-0 sm:text-left">
          <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-headline">
            <%= t('spina.pages.pick_version') %>
          </h3>
          <div class="mt-2">
            <p class="text-sm leading-5 text-gray-500 mb-4">
              <%= t('spina.pages.pick_version_long') %>
            </p>

            <select data-action="toggle-page-drafts#toggle">
              <% Spina::PageDraft.all.each do |page_draft| %>
                <option value=<%= [page_draft.view_template, page_draft.json_attributes] %>><%= page_draft.created_at %></option>
              <% end %>
            </select>

            <%= f.hidden_field :view_template, data: {toggle_page_drafts_target: "viewTemplate"} %>
            <%= f.hidden_field :json_attributes, data: {toggle_page_drafts_target: "jsonAttributes"} %>
          </div>
        </div>
      </div>
    </div>
    <div class="px-4 py-6 sm:px-6 sm:flex sm:flex-row-reverse">
      <span class="flex w-full rounded-md shadow-sm sm:ml-3 sm:w-auto">
        <button type="submit" class="btn btn-primary">
          <%=t 'spina.pages.change_version' %>
        </button>
      </span>
      <span class="mt-3 flex w-full rounded-md shadow-sm sm:mt-0 sm:w-auto">
        <button type="button" class="btn btn-default" data-action="modal#close">
          <%=t 'spina.ui.cancel' %>
        </button>
      </span>
    </div>
  <% end %>
<% end %>
